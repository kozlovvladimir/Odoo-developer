<odoo>
    <!-- Деревовидне подання -->
    <record id="view_tree_estate_property" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="total_area" string="Total Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_price" string="Best Offer"/>
                <field name="date_availability" string="Available From"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
    </record>

    <!-- Формове подання -->
    <record id="view_form_estate_property" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': True}"/>
                    <button name="action_set_sold" type="object" string="SOLD" class="oe_highlight"
                            invisible="state == 'sold'"/>
                    <button name="action_cancel" type="object" string="CANCEL" class="btn-secondary"
                            invisible="state in ['sold', 'canceled']"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" string="Title"/>
                        </h1>
                    </div>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" string="Tags"/>
                        <field name="property_type_id" string="Property Type" options="{'no_create_edit': True}"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode" string="Postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="best_price" string="Best Offer" readonly="1"/>
                            <field name="selling_price" string="Selling Price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area (sqm)"/>
                                <field name="garden_orientation" string="Garden Orientation"/>
                                <field name="total_area" string="Total Area (sqm)" readonly="1"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree string="Offers">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="action_accept" type="object" icon="fa-check" string=" "
                                            class="btn-success"/>
                                    <button name="action_refuse" type="object" icon="fa-times" string=" "
                                            class="btn-danger"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman_id" string="Salesman"/>
                                <field name="buyer_id" string="Buyer"/>
                            </group>
                        </page>
                        <page string="Tags">
                            <group>
                                <field name="tag_ids" widget="many2many_tags" string="Tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Канбан-подання -->
    <!-- Канбан-подання -->
    <record id="view_kanban_estate_property" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" group_by="property_type_id" js_class="oe_kanban_no_drag_drop">
                <field name="state"/> <!-- Завантаження статусу -->
                <field name="expected_price"/> <!-- Завантаження очікуваної ціни -->
                <field name="best_price"/> <!-- Завантаження найкращої пропозиції -->
                <field name="selling_price"/> <!-- Завантаження ціни продажу -->
                <field name="tag_ids"/> <!-- Завантаження тегів -->
                <field name="property_type_id"/> <!-- Тип нерухомості для групування -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>

                            <!-- Відображення очікуваної ціни -->
                            <div>
                                <strong>Expected Price:</strong>
                                <span t-if="record.expected_price" t-esc="record.expected_price.value"/>
                                <t t-else="">
                                    <span>N/A</span>
                                </t>
                            </div>

                            <!-- Відображення найкращої пропозиції -->
                            <t t-if="record.state.raw_value and record.state.raw_value in ['offer_received', 'offer_accepted', 'sold']">
                                <div>
                                    <strong>Best Offer:</strong>
                                    <span t-if="record.best_price" t-esc="record.best_price.value"/>
                                    <t t-else="">
                                        <span>N/A</span>
                                    </t>
                                </div>
                            </t>

                            <!-- Відображення ціни продажу -->
                            <t t-if="record.state.raw_value and record.state.raw_value in ['offer_accepted', 'sold']">
                                <div>
                                    <strong>Selling Price:</strong>
                                    <span t-if="record.selling_price" t-esc="record.selling_price.value"/>
                                    <t t-else="">
                                        <span>N/A</span>
                                    </t>
                                </div>
                            </t>

                            <!-- Відображення тегів -->
                            <div t-if="record.tag_ids.value.length">
                                <strong>Tags:</strong>
                                <span t-foreach="record.tag_ids.value" t-as="tag">
                                    <span t-esc="tag.display_name" class="badge badge-info"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Пошукове подання -->
    <record id="view_search_estate_property" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="total_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="state"/>
                <field name="garden_orientation"/>
                <field name="date_availability"/>
                <field name="best_price"/>

                <filter string="Available Properties" name="available"
                        domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <group expand="1" string="Group by Postcode">
                    <filter string="Group by Postcode" name="group_by_postcode" context="{'group_by': 'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Дія -->
    <record id="estate_estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field> <!-- Додано kanban -->
        <field name="view_id" ref="view_tree_estate_property"/>
        <field name="search_view_id" ref="view_search_estate_property"/>
    </record>
</odoo>
