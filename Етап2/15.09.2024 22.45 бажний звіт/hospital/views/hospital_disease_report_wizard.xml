<odoo>
    <!-- Визначення форми для звіту -->
    <record id="view_disease_report_wizard_form" model="ir.ui.view">
        <field name="model">hospital.disease.report.wizard</field> <!-- Це правильна назва моделі -->
        <field name="arch" type="xml">
            <form string="Disease Report Wizard">
                <group>
                    <field name="doctor_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <!-- Визначення дії для запуску звіту -->
    <record id="action_disease_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Disease Report</field>
        <field name="res_model">hospital.disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
