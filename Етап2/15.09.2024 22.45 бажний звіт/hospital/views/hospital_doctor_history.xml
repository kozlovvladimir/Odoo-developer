<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Перегляд списку для моделі Doctor History -->
    <record id="view_hospital_doctor_history_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.history.tree</field>
        <field name="model">hospital.doctor.history</field>
        <field name="arch" type="xml">
            <tree string="Doctor Assignment History">
                <field name="patient"/>
                <field name="doctor"/>
                <field name="assignment_date"/>
            </tree>
        </field>
    </record>

    <!-- Перегляд форми для моделі Doctor History -->
    <record id="view_hospital_doctor_history_form" model="ir.ui.view">
        <field name="name">hospital.doctor.history.form</field>
        <field name="model">hospital.doctor.history</field>
        <field name="arch" type="xml">
            <form string="Doctor Assignment History">
                <group>
                    <field name="patient"/>
                    <field name="doctor"/>
                    <field name="assignment_date"/>
                </group>
                <footer>
                    <button string="Save" type="object" name="create" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Дія для відкриття списку історії призначень лікарів -->
    <record id="action_hospital_doctor_history" model="ir.actions.act_window">
        <field name="name">Doctor Assignment History</field>
        <field name="res_model">hospital.doctor.history</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hospital_doctor_history_tree"/>
    </record>

    <!-- Пункт меню для моделі Doctor History -->
    <menuitem id="menu_hospital_doctor_history" name="Doctor Assignment History"
        parent="menu_hospital_main" action="action_hospital_doctor_history"/>
</odoo>
