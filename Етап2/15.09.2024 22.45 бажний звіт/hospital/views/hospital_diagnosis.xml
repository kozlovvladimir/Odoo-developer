<odoo>
    <!-- Перегляд списку для моделі Diagnosis -->
    <record id="view_hospital_diagnosis_tree" model="ir.ui.view">
        <field name="name">hospital.diagnosis.tree</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree string="Diagnoses">
                <field name="doctor"/>
                <field name="patient"/>
                <field name="disease"/>
                <field name="diagnosis_date"/>
            </tree>
        </field>
    </record>

    <!-- Перегляд форми для моделі Diagnosis -->
    <record id="view_hospital_diagnosis_form" model="ir.ui.view">
        <field name="name">hospital.diagnosis.form</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form string="Diagnosis">
                <group>
                    <field name="doctor"/>
                    <field name="patient"/>
                    <field name="disease"/>
                    <field name="diagnosis_date"/>
                    <field name="treatment"/>
                    <!-- Поле коментаря ментора -->
                    <field name="mentor_comment"/>
                </group>
                <footer>
                    <button string="Save" type="object" name="create" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
