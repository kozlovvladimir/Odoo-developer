<odoo>
    <!-- Перегляд списку для Disease -->
    <record id="view_hospital_disease_tree" model="ir.ui.view">
        <field name="name">hospital.disease.tree</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <tree string="Diseases">
                <field name="name"/>
                <field name="disease_type"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Перегляд форми для Disease -->
    <record id="view_hospital_disease_form" model="ir.ui.view">
        <field name="name">hospital.disease.form</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <form string="Disease">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="disease_type"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Дія для відкриття списку хвороб -->
    <record id="action_hospital_disease" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hospital.disease</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hospital_disease_tree"/>
    </record>

    <!-- Пункт меню для моделі Disease -->
    <menuitem id="menu_hospital_disease" name="Diseases"
        parent="menu_hospital_main" action="action_hospital_disease"/>
</odoo>
