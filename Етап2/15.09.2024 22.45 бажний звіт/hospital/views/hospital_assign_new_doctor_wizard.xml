<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Перегляд візарду для переносу запису на інший час -->
    <record id="view_reschedule_appointment_wizard_form" model="ir.ui.view">
        <field name="name">reschedule.appointment.wizard.form</field>
        <field name="model">reschedule.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Reschedule Appointment">
                <group>
                    <!-- Поле для вибору існуючого запису на прийом -->
                    <field name="appointment_id"/>
                    <!-- Поле для вибору нового лікаря -->
                    <field name="new_doctor_id"/>
                    <!-- Поле для вибору нової дати -->
                    <field name="new_date"/>
                </group>
                <footer>
                    <!-- Кнопка для виконання дії переносу -->
                    <button string="Reschedule" type="object" name="reschedule_appointment" class="btn-primary"/>
                    <!-- Кнопка для скасування -->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Додавання дії для запуску візарду -->
    <record id="action_reschedule_appointment_wizard" model="ir.actions.act_window">
        <field name="name">Reschedule Appointment</field>
        <field name="res_model">reschedule.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_reschedule_appointment_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Додавання пункту меню для запуску візарду -->
    <menuitem id="menu_reschedule_appointment_wizard" name="Reschedule Appointment"
        parent="menu_hospital_main" action="action_reschedule_appointment_wizard"/>
</odoo>
