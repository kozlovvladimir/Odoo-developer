<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Перегляд списку для моделі Doctor -->
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="specialization"/>
                <field name="intern"/>
                <field name="mentor"/>
            </tree>
            <header>
                <button name="action_disease_report_wizard" string="Generate Disease Report" type="action" class="btn-primary"/>
            </header>
        </field>
    </record>

    <!-- Перегляд форми для моделі Doctor -->
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <group>
                    <field name="name"/>
                    <field name="specialization"/>
                    <field name="intern"/>
                    <field name="mentor"/>
                </group>
                <header>
                     <button name="action_disease_report_wizard" string="Generate Disease Report" type="action" class="btn-primary"/>
                </header>
                <footer>
                    <button string="Save" type="object" name="create" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Дія для відкриття списку лікарів -->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hospital_doctor_tree"/>
    </record>

    <!-- Пункт меню для моделі Doctor -->
    <menuitem id="menu_hospital_doctor" name="Doctors" parent="menu_hospital_main" action="action_hospital_doctor"/>
</odoo>
