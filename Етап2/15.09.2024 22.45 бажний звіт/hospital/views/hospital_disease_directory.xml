<odoo>
    <!-- Дерево (список) для перегляду хвороб з відображенням ієрархії -->
    <record id="view_disease_directory_tree" model="ir.ui.view">
        <field name="name">disease.directory.tree</field>
        <field name="model">hospital.disease.directory</field>
        <field name="arch" type="xml">
            <tree string="Diseases Directory">
                <field name="disease_name"/>
                <field name="parent_id"/>  <!-- Поле для батьківської хвороби -->
                <field name="is_category"/>
            </tree>
        </field>
    </record>

    <!-- Форма для додавання/редагування хвороб -->
    <record id="view_hospital_disease_directory_form" model="ir.ui.view">
        <field name="name">hospital.disease.directory.form</field>
        <field name="model">hospital.disease.directory</field>
        <field name="arch" type="xml">
            <form string="Disease Directory">
                <sheet>
                    <group>
                        <field name="disease_name"/>
                        <field name="is_category"/>
                        <field name="parent_id" string="Parent Disease Type"/>
                    </group>
                    <field name="child_ids">
                        <tree string="Subtypes">
                            <field name="disease_name"/>
                            <field name="is_category"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
