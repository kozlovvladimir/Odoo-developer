<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Перегляд списку для моделі Sample Type -->
    <record id="view_hospital_sample_type_tree" model="ir.ui.view">
        <field name="name">hospital.sample.type.tree</field>
        <field name="model">hospital.sample.type</field>
        <field name="arch" type="xml">
            <tree string="Sample Types">
                <field name="sample_type_name"/>
            </tree>
        </field>
    </record>

    <!-- Перегляд форми для моделі Sample Type -->
    <record id="view_hospital_sample_type_form" model="ir.ui.view">
        <field name="name">hospital.sample.type.form</field>
        <field name="model">hospital.sample.type</field>
        <field name="arch" type="xml">
            <form string="Sample Type">
                <group>
                    <field name="sample_type_name"/>
                </group>
                <footer>
                    <button string="Save" type="primary" class="btn-primary" name="save"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Дія для відкриття списку типів зразків (sample types) -->
    <record id="action_hospital_sample_type" model="ir.actions.act_window">
        <field name="name">Sample Types</field>
        <field name="res_model">hospital.sample.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hospital_sample_type_tree"/>
    </record>

    <!-- Пункт меню для моделі Sample Type -->
    <menuitem id="menu_hospital_sample_type" name="Sample Types"
        parent="menu_hospital_main" action="action_hospital_sample_type"/>
</odoo>
